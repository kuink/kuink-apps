<?xml version="1.0" encoding="UTF-8"?>
<Node>
  <Permissions>
  </Permissions>
  <Doc lang="pt-PT">
  </Doc>
  <Libraries>
    <Use name="DateTimeLib" type="lib"/>
    <Use name="UtilsLib" type="lib"/>
  </Libraries>
  <Configuration/>
  <Screens>
    <Screen id="scrSearch" doc="Search Screen">
      <Form name="frmSearch" persist="true" title="search">
      	<Text id="code"/>
      	<Text id="name" inline="tight"/>
        <ButtonGroup>
          <Button id="search" type="search" label="search" action="search"/>
          <Button id="insert" type="add" label="insert" action="insert"/>
        </ButtonGroup>
      </Form>
      <Grid name="grdSearchResult" pageable="true" collapsible="false" pagesize="10" pagingaction="search" title="acl">
        <Template>
          <Columns>
          	<Column name="id"/>
          	<Column name="uuid"/>
          	<Column name="code"/>
          	<Column name="name"/>
          	<Column name="description"/>
					</Columns>
          <Actions separator="true">
            <Action name="view" actionvalue="id"/>
            <Action name="edit" actionvalue="id"/>
            <Action name="delete" actionvalue="id" confirm="true"/>
          </Actions>
        </Template>
      </Grid>
    </Screen>
    <Screen id="scrView" doc="View Screen">
      <Form name="frmView">
      	<Static id="id"/>
      	<Static id="uuid"/>
      	<Static id="code"/>
      	<Static id="name"/>
      	<Static id="description"/>
        <ButtonGroup>
          <Button id="back" type="back" label="back" action="search"/>
          <Button id="edit" type="update" label="edit" action="edit"/>
          <Button id="delete" type="delete" label="delete" action="delete" confirm="true"/>
        </ButtonGroup>
      </Form>
    </Screen>
    <Screen id="scrEdit" doc="Edit Screen">
      <Form name="frmEdit" title="acl">
      	<Text id="code" required="true"/>
      	<Text id="name"/>
      	<Text id="description"/>
        <ButtonGroup>
          <Button id="cancel" type="cancel" label="cancel" action="search"/>
          <Button id="save" type="update" label="save" action="save"/>
        </ButtonGroup>
      </Form>
      <Form name="frmAddEntry">
        <ButtonGroup>
          <Button id="addEntry" type="add" label="addEntry" action="addEntry"/>
        </ButtonGroup>
      </Form>
      
      <Grid name="grdEntries" collapsible="false" title="entries">
        <Template>
          <Columns>
          	<Column name="id">
          		<Formatter name="Separator" method="newLine"/>          	
          	</Column>
          	<Column name="person_display_name">
          		<Formatter name="Style" method="bold"/>
          		<Formatter name="Separator" method="newLine"/>          	
          	</Column>
          	<Column name="id_person" inline="true"/>
          	
          	<Column name="person_group_code">
          		<Formatter name="Style" method="bold"/>
          		<Formatter name="Separator" method="newLine"/>
          	</Column>
          	<Column name="person_group_name" inline="true">
          		<Formatter name="Separator" method="newLine"/>
          	</Column>
          	<Column name="id_person_group" inline="true"/>

          	<Column name="permission_code">
          		<Formatter name="Style" method="bold"/>
          	  <Formatter name="Separator" method="newLine"/>
          	</Column>
          	<Column name="permission_name" inline="true">
          		<Formatter name="Separator" method="newLine"/>          	
          	</Column>
          	<Column name="id_permission" inline="true"/>
					</Columns>
          <Actions separator="true">
            <Action name="deleteEntry" actionvalue="id" confirm="true"/>
          </Actions>
        </Template>
      </Grid>
    </Screen>
    <Screen id="scrEditEntry" doc="Edit Entry Screen">
      <Form name="frmEditEntry" title="aclEntry">
      	<Select id="id_person" datasource="call:gecol.core,person,api,searchFullText" bindid="id" bindvalue="display_name" bindimage="public_key" bindresults="display_name,_person_type_description"  searchable="dynamic"
          datasource-params="text,pagenum" datasource-initial="call:gecol.core,person,api,getSimple"/>
      	<Select id="id_person_group" datasource="call:gecol.core,person.group,api,getAll" bindid="id" bindvalue="code" bindresults="code,name"  searchable="dynamic" datasource-params="text,pagenum" datasource-initial="call:gecol.core,person.group,api,getById"/>
      	<Select id="id_permission" datasource="call:framework,permission,api,search" bindid="id" bindvalue="code" bindresults="code,name"  searchable="dynamic" datasource-params="text,pagenum" datasource-initial="call:framework,permission,api,getById"/>
        <ButtonGroup>
          <Button id="cancel" type="cancel" label="cancel" action="edit"/>
          <Button id="save" type="update" label="save" action="saveNewEntry"/>
        </ButtonGroup>
      </Form>
    </Screen>
  </Screens>
  <Actions>
    <Action name="init">
      <Action name="search"/>
    </Action>
    <Action name="search" screen="scrSearch">
      <If condition="$defaultData-&gt;__length &gt; 0">
        <Then>
          <Control method="setDefaultData" object="frmSearch">
            <Param>
              <Var name="defaultData"/>
            </Param>
          </Control>
        </Then>
      </If>
      <Var name="currentData">
        <Control method="getCurrentData" object="frmSearch"/>
      </Var>
      <Control method="bind" object="grdSearchResult">
        <Param>
          <Call library="framework,acl,api" function="search">
            <Param name="pagesize">
              <Control method="getPageSize" object="grdSearchResult"/>
            </Param>
            <Param name="pagenum">
              <Control method="getCurrentPage" object="grdSearchResult"/>
            </Param>
          </Call>
        </Param>
      </Control>
    </Action>
    <Action name="view" screen="scrView">
      <Var name="selectedId" process="true">
        <ActionValue/>
      </Var>
      <Control method="bind" object="frmView">
        <Param>
          <Call library="framework,acl,api" function="getById">
            <Param name="id">
              <ActionValue/>
            </Param>
          </Call>
        </Param>
      </Control>
    </Action>
    <Action name="save">
      <If condition="@selectedId == ''">
        <Then>
          <Call library="framework,acl,api" function="add" params="POSTDATA"/>
        </Then>
        <Else>
          <Call library="framework,acl,api" function="update" params="POSTDATA">
            <Param name="id">
              <Var name="selectedId" process="true"/>
            </Param>
          </Call>
        </Else>
      </If>
      <Action name="search"/>
    </Action>
    <Action name="insert" screen="scrEdit">
      <Var name="selectedId" process="true">
        <Null/>
      </Var>
    </Action>
    <Action name="delete">
      <Var name="selectedId" process="true">
        <IsNull>
          <Param>
            <ActionValue/>
          </Param>
          <Param>
            <Var name="selectedId" process="true"/>
          </Param>
        </IsNull>
      </Var>
      <Call library="framework,acl,api" function="delete">
        <Param name="id">
          <Var name="selectedId" process="true"/>
        </Param>
      </Call>
      <Action name="search"/>
    </Action>
    <Action name="edit" screen="scrEdit">
      <Var name="selectedId" process="true">
        <IsNull>
          <Param>
            <ActionValue/>
          </Param>
          <Param>
            <Var name="selectedId" process="true"/>
          </Param>
        </IsNull>
      </Var>
      <Var name="acl">
        <Call library="framework,acl,api" function="getById">
          <Param name="id">
            <Var name="selectedId" process="true"/>
          </Param>
        </Call>
      </Var>
      <Var name="aclEntries">
        <Call library="framework,acl,api" function="getEntries">
          <Param name="id">
            <Var name="selectedId" process="true"/>
          </Param>
        </Call>
      </Var>
      
      <Control method="bind" object="frmEdit">
        <Param>
        	<Var name="acl"/>
        </Param>
      </Control>
      <Control method="bind" object="grdEntries">
        <Param>
        	<Var name="aclEntries"/>
        </Param>
      </Control>
      
    </Action>
    
    <Action name="addEntry" screen="scrEditEntry">
    </Action>
    <Action name="saveNewEntry">
    	<Call library="framework,acl.entry,api" function="add">
				<Param name="id_acl"><Var name="selectedId" process="true"/></Param>
				<Param name="id_permission"><Var name="POSTDATA" key="id_permission"/></Param>
				<Param name="id_person_group"><Var name="POSTDATA" key="id_person_group"/></Param>
				<Param name="id_person"><Var name="POSTDATA" key="id_person"/></Param>
			</Call>    	
    	<Action name="edit"/>
    </Action>
    
    <Action name="deleteEntry">
      <Call library="framework,acl.entry,api" function="delete">
        <Param name="id">
          <ActionValue/>
        </Param>
      </Call>
      <Action name="edit"/>
    </Action>
    
  </Actions>
</Node>
