<?xml version="1.0" encoding="UTF-8"?>
<Node>
  <Permissions>
  </Permissions>
  <Doc lang="pt-PT">
  </Doc>
  <Libraries>
    <Use name="DateTimeLib" type="lib"/>
  </Libraries>
  <Configuration/>
  <Screens>
    <Screen name="scrSearch" doc="Search Screen" template="1col_LeftMenu">
      <Form name="frmSearch" title="search" persist="true">
        <Int name="id"/>
        <Text name="username" inline="true"/>
        <Text name="email"/>
        <Text name="display_name" inline="true"/>
        <ButtonGroup>
          <Button name="search" type="search" label="search" action="search"/>
          <Button name="insert" type="add" label="insert" action="insert"/>
        </ButtonGroup>
      </Form>
      <Grid name="grdSearchResult" pageable="true" collapsible="false" pagesize="10" pagingaction="search" title="result">
        <Template>
          <Columns>
            <Column name="id" label="id"/>
            <Column name="username" label="username"/>
            <Column name="email" label="email"/>
            <Column name="display_name" label="display_name"/>
            <Column name="_creation" label="_creation">
              <Formatter name="DateTime" method="shortDateTime"/>
            </Column>
            <Column name="_creation_ip" label="_creation_ip"/>
            <Column name="_modification" label="_modification">
              <Formatter name="DateTime" method="shortDateTime"/>
            </Column>
            <Column name="_modification_ip" label="_modification_ip"/>
          </Columns>
          <Actions separator="true">
            <Action name="view" actionvalue="id"/>
            <Action name="edit" actionvalue="id"/>
            <Action name="delete" actionvalue="id" confirm="true"/>
          </Actions>
        </Template>
      </Grid>
    </Screen>
    <Screen name="scrView" doc="View Screen" template="1col_LeftMenu">
      <Form name="frmView" title="view">
        <Static name="id"/>
        <Static name="username"/>
        <Static name="email"/>
        <Static name="display_name"/>
        <Static name="_creation">
          <Formatter name="DateTime" method="shortDateTime"/>
        </Static>
        <Static name="_creation_ip"/>
        <Static name="_modification">
          <Formatter name="DateTime" method="shortDateTime"/>
        </Static>
        <Static name="_modification_ip"/>
        <ButtonGroup>
          <Button name="back" type="back" label="back" action="search"/>
          <Button name="edit" type="update" label="edit" action="edit"/>
          <Button name="delete" type="delete" label="delete" action="delete" confirm="true"/>
        </ButtonGroup>
      </Form>
    </Screen>
    <Screen name="scrEdit" doc="Edit Screen" template="1col_LeftMenu">
      <Form name="frmEdit" title="edit">
        <Static name="id" label="id" required="true"/>
        <Text name="username" label="username" required="false"/>
        <Text name="email" label="email" required="false"/>
        <Text name="display_name" label="display_name" required="false"/>
        <ButtonGroup>
          <Button name="cancel" type="cancel" label="cancel" action="search"/>
          <Button name="save" type="update" label="save" action="save"/>
        </ButtonGroup>
      </Form>
    </Screen>
  </Screens>
  <Actions>
    <Action name="init">
      <Action name="search"/>
    </Action>
    <Action name="search" screen="scrSearch">
      <If condition="$defaultData-&gt;__length &gt; 0">
        <Then>
          <Control method="setDefaultData" object="frmSearch">
            <Param>
              <Var name="defaultData"/>
            </Param>
          </Control>
        </Then>
      </If>
      <Var name="currentData">
        <Control method="getCurrentData" object="frmSearch"/>
      </Var>
      <Control method="bind" object="grdSearchResult">
        <Param>
          <Call library="framework,user,api" function="search">
            <Param name="id">
              <Var name="currentData" key="id"/>
            </Param>
            <Param name="username">
              <Var name="currentData" key="username"/>
            </Param>
            <Param name="email">
              <Var name="currentData" key="email"/>
            </Param>
            <Param name="display_name">
              <Var name="currentData" key="display_name"/>
            </Param>
            <Param name="pagesize">
              <Control method="getPageSize" object="grdSearchResult"/>
            </Param>
            <Param name="pagenum">
              <Control method="getCurrentPage" object="grdSearchResult"/>
            </Param>
          </Call>
        </Param>
      </Control>
    </Action>
    <Action name="view" screen="scrView">
      <Var name="selectedId" process="true">
        <ActionValue/>
      </Var>
      <Control method="bind" object="frmView">
        <Param>
          <Call library="framework,user,api" function="getById">
            <Param name="id">
              <ActionValue/>
            </Param>
          </Call>
        </Param>
      </Control>
    </Action>
    <Action name="save">
      <If condition="@selectedId == ''">
        <Then>
          <Call library="framework,user,api" function="add" params="POSTDATA"/>
        </Then>
        <Else>
          <Call library="framework,user,api" function="update" params="POSTDATA">
            <Param name="id">
              <Var name="selectedId" process="true"/>
            </Param>
          </Call>
        </Else>
      </If>
      <Action name="search"/>
    </Action>
    <Action name="insert" screen="scrEdit">
      <Var name="selectedId" process="true">
        <Null/>
      </Var>
    </Action>
    <Action name="delete">
      <Var name="selectedId" process="true">
        <IsNull>
          <Param>
            <ActionValue/>
          </Param>
          <Param>
            <Var name="selectedId" process="true"/>
          </Param>
        </IsNull>
      </Var>
      <Call library="framework,user,api" function="delete">
        <Param name="id">
          <Var name="selectedId" process="true"/>
        </Param>
      </Call>
      <Action name="search"/>
    </Action>
    <Action name="edit" screen="scrEdit">
      <Var name="selectedId" process="true">
        <IsNull>
          <Param>
            <ActionValue/>
          </Param>
          <Param>
            <Var name="selectedId" process="true"/>
          </Param>
        </IsNull>
      </Var>
      <Control method="bind" object="frmEdit">
        <Param>
          <Call library="framework,user,api" function="getById">
            <Param name="id">
              <Var name="selectedId" process="true"/>
            </Param>
          </Call>
        </Param>
      </Control>
    </Action>
    <Action name="back">
        <RaiseEvent name="back"/>
    </Action>
  </Actions>
  <Library forceinterface="true">
  </Library>
</Node>
