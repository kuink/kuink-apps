<?xml version="1.0" encoding="UTF-8"?>
<Method>
  <Doc>
    <![CDATA[ Gets a list of persons that meet the given search criteria. ]]>
	</Doc>
  <Params>
    <Param name="text" type="text" required="false" doc="Search text"/>
    <Param name="id_company" type="int" required="false" doc="Search text"/>
  </Params>
  <Body>
    <SqlPaginated>
      <XSql>
        <XSelect>
          <XField>
            <![CDATA[ 
							p.* 
						]]>
        </XField>
        </XSelect>
        <XFrom>
          <XTable>
            <![CDATA[ 
              fw_person p
						]]>
          </XTable>
          <XTable optional="id_company">
            <![CDATA[ 
              INNER JOIN fw_person_company pc ON (pc.id_person = p.id)
						]]>
          </XTable>
        </XFrom>
        <XWhere>
          <XCondition><![CDATA[ 1 = 1 ]]></XCondition>
					<XCondition optional="text">
	          <![CDATA[
							AND ( 
								p.name LIKE '{param->text}'
								OR p.id LIKE '{param->text}'
								OR p.uid LIKE '{param->text}'
							)  
						]]>
	        </XCondition>
          <XCondition optional="id_company">
	          <![CDATA[
							AND pc.id_company = {param->id_company}
						]]>
	        </XCondition>
        </XWhere>
        <XOrderBy>
					<XOrder><![CDATA[ p.name ASC ]]></XOrder>
				</XOrderBy>
      </XSql>
    </SqlPaginated>
  </Body>
</Method>