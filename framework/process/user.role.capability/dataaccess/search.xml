<?xml version="1.0" encoding="UTF-8"?>
<Method>
  <Doc>
        Search all fw_role_capability
    </Doc>
  <Params>
    <Param name="id" />
    <Param name="id_role" />
    <Param name="id_capability" />
  </Params>
  <Body>
    <SqlPaginated>
      <XSql>
        <XSelect>
          <XField>
            *
        </XField>
        </XSelect>
        <XFrom>
          <XTable>
            fw_role_capability t
          </XTable>
        </XFrom>
        <XWhere>
          <XCondition>1 = 1</XCondition>
          <XCondition optional="id">AND t.id = {param->id}</XCondition>
          <XCondition optional="id_role">AND t.id_role = {param->id_role}</XCondition>
          <XCondition optional="id_capability">AND t.id_capability = {param->id_capability}</XCondition>
        </XWhere>
      </XSql>
    </SqlPaginated>
  </Body>
</Method>