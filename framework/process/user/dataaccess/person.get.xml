<?xml version="1.0" encoding="UTF-8"?>
<Method>
  <Doc>
    Get the person data 
  </Doc>
  <Params>
    <Param name="id_company" />
    <Param name="id_person" />
  </Params>
  <Body>
    <Load>
      <XSql>
        <XSelect>
          <XField>
            fu.*, fp.*
          </XField>
        </XSelect>
        <XFrom>
          <XTable>
            fw_user fu 
            INNER JOIN fw_user_company fuc ON (fuc.id_user = fu.id)
            INNER JOIN person fp ON (fp.id = fuc.id_person)
          </XTable>
        </XFrom>
        <XWhere>
          <XCondition>  
            fuc.id_company = {param->id_company}
            AND fp.id = {param->id_person}
          </XCondition>
        </XWhere>
      </XSql>
    </Load>
  </Body>
</Method>