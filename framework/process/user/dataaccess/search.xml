<?xml version="1.0" encoding="UTF-8"?><Method>
    <Doc>
        Search all fw_user
    </Doc>
    <Params>
                      <Param name="id"/>
                  <Param name="username"/>
                  <Param name="email"/>
                  <Param name="display_name"/>
                                            </Params>
    <Body>
        <SqlPaginated>
            <XSql>
                <XSelect>
                    <XField >
                        *
                    </XField>
                </XSelect>
                <XFrom>
                    <XTable>
                        fw_user t
                    </XTable>
                </XFrom>
                <XWhere>
                  <XCondition>1 = 1</XCondition>
                                                                                                                                                                                                        <XCondition optional="id">AND t.id = {param->id}</XCondition>
                                                                                                                                                                                          <XCondition optional="username">AND t.username like '{param->username}'</XCondition>
                                                                                                                                                                                          <XCondition optional="email">AND t.email like '{param->email}'</XCondition>
                                                                                                                                                                                          <XCondition optional="display_name">AND t.display_name like '{param->display_name}'</XCondition>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                </XWhere>
            </XSql>
        </SqlPaginated>
    </Body>
</Method>