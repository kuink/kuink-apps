<?xml version="1.0" encoding="UTF-8"?>
<Method>
    <Doc>
        Search all fw_state_machine
    </Doc>
    <Params>
                      <Param name="code"/>
                  <Param name="name"/>
                                                                                
    </Params>
    <Body>
        <SqlPaginated>
            <XSql>
                <XSelect>
                    <XField >
                        *
                    </XField>
                </XSelect>
                <XFrom>
                    <XTable>
                        fw_state_machine t
                    </XTable>
                </XFrom>
                <XWhere>
                  <XCondition>1 = 1</XCondition>
                                                                                                                                                                                                                                                                  <XCondition optional="code">AND t.code like '{param->code}'</XCondition>
                                                                                                                                                                                          <XCondition optional="name">AND t.name like '{param->name}'</XCondition>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            
                </XWhere>
            </XSql>
        </SqlPaginated>
    </Body>
</Method>