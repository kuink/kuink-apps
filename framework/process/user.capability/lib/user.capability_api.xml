    </Function>
    <Function name="update" doc="Updates a record in table fw_capability">
      <Params>
        <Param name="id" type="int" required="true"/>
        <Param name="name" type="text" required="true"/>
        <Param name="code" type="text" required="true"/>
        <Param name="is_global" type="checkbox" required="false"/>
