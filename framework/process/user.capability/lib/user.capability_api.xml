<?xml version="1.0" encoding="UTF-8"?>
<Node>
  <Permissions/>
  <Libraries>
    <Use name="DateTimeLib" type="lib"/>
  </Libraries>
  <Configuration/>
  <Screens/>
  <Actions>
    <Action name="init"/>
  </Actions>
  <Library>
    <Function name="add" doc="Add a capability in the system">
      <Params>
        <Param name="name" type="text" required="true" doc="Capability name."/>
        <Param name="code" type="text" required="true" doc="Capability code."/>
        <Param name="is_global" type="int" required="true" doc="Is this capability global to all companies or restricted by company?"/>
      </Params>
      <Return type="int" doc="the capablity id"/>
      <Errors>
        <Error code="-1" doc="Capability allready exist"/>
      </Errors>
      <Begin>
        <Permissions>
          <Allow>
            <Capability name="framework/capability::manage"/>
          </Allow>
        </Permissions>
        <Var name="result">0</Var>
        <Var name="rid">
          <Call function="existsByCode">
            <Param name="code">
              <Var name="code"/>
            </Param>
          </Call>
        </Var>
        <If condition="$rid == 1">
          <Then>
            <Var name="result">-1</Var>
          </Then>
        </If>
        <If condition="$result == 0">
          <Then>
            <Var name="id">
              <DataAccess method="insert" params="PARAMS">
                <Param name="_entity">fw_capability</Param>
                <Param name="_creation">
                  <DateTimeLib method="Now"/>
                </Param>
                <Param name="_creation_ip">
                  <Var name="USER" key="ip"/>
                </Param>
                <Param name="_modification">
                  <DateTimeLib method="Now"/>
                </Param>
                <Param name="_modification_ip">
                  <Var name="USER" key="ip"/>
                </Param>
              </DataAccess>
            </Var>
            <Var name="result">
              <Var name="id"/>
            </Var>
          </Then>
        </If>
        <Return>
          <Var name="result"/>
        </Return>
      </Begin>
    </Function>
    <Function name="getById" doc="Get a capability data">
      <Params>
        <Param name="id" type="int" required="true" doc="Capability Id."/>
      </Params>
      <Return type="single" doc="">
        <External name="id" type="int" doc="Capability Id"/>
        <External name="name" type="text" doc="Capability name"/>
        <External name="code" type="text" doc="Capability code"/>
        <External name="is_global" type="int" doc="Is this capability global?"/>
        <External name="_creation" doc=""/>
        <External name="_creation_ip" doc=""/>
        <External name="_modification" doc=""/>
        <External name="_modification_ip" doc=""/>
      </Return>
      <Begin>
        <Permissions>
          <Allow>
            <Capability name="framework/capability::manage"/>
          </Allow>
        </Permissions>
        <Var name="record">
          <DataAccess method="load">
            <Param name="_entity">fw_capability</Param>
            <Param name="id"><Var name="id"/></Param>
          </DataAccess>
        </Var>
        <Return>
          <Var name="record"/>
        </Return>
      </Begin>
    </Function>
    <Function name="getByCode" doc="Get a capability data giving the code">
      <Params>
        <Param name="code" type="text" required="true" doc="capability code."/>
      </Params>
      <Return type="single" doc="">
        <External name="id" type="int" doc="Capability Id"/>
        <External name="name" type="text" doc="Capability name"/>
        <External name="code" type="text" doc="Capability code"/>
        <External name="is_global" type="int" doc="Is this capability global?"/>
        <External name="_creation" doc=""/>
        <External name="_creation_ip" doc=""/>
        <External name="_modification" doc=""/>
        <External name="_modification_ip" doc=""/>
      </Return>
      <Begin>
        <Permissions>
          <Allow>
            <Capability name="framework/capability::manage"/>
          </Allow>
        </Permissions>
        <!-- Set default values -->
        <Var name="record">
          <DataAccess method="load">
            <Param name="_entity">fw_capability</Param>
            <Param name="code"><Var name="code"/></Param>
          </DataAccess>
        </Var>
        <Return>
          <Var name="record"/>
        </Return>
      </Begin>
    </Function>
    <Function name="existsById" doc="Check if the capability exists">
      <Params>
        <Param name="id" type="int" required="true" doc="Role Id."/>
      </Params>
      <Return type="int" doc="1 if exists, 0 otherwise"/>
      <Begin>
        <Permissions>
          <Allow>
            <Capability name="framework/capability::manage"/>
          </Allow>
        </Permissions>
        <Var name="result">0</Var>
        <Var name="record">
          <DataAccess method="load">
            <Param name="_entity">fw_capability</Param>
            <Param name="id"><Var name="id"/></Param>
          </DataAccess>
        </Var>
        <Var name="rid">
          <Var name="record" key="id"/>
        </Var>
        <If condition="$rid != ''">
          <Then>
            <Var name="result">1</Var>
          </Then>
        </If>
        <Return>
          <Var name="result"/>
        </Return>
      </Begin>
    </Function>
    <Function name="existsByCode" doc="Check if the capability exists">
      <Params>
        <Param name="code" type="text" required="true" doc="Capability code."/>
      </Params>
      <Return type="int" doc="1 if exists, 0 otherwise"/>
      <Begin>
        <Permissions>
          <Allow>
            <Capability name="framework/capability::manage"/>
          </Allow>
        </Permissions>
        <Var name="result">0</Var>
        <Var name="record">
          <DataAccess method="load">
            <Param name="_entity">fw_capability</Param>
            <Param name="code"><Var name="code"/></Param>
          </DataAccess>
        </Var>
        <Var name="rid">
          <Var name="record" key="id"/>
        </Var>
        <If condition="$rid != ''">
          <Then>
            <Var name="result">1</Var>
          </Then>
        </If>
        <Return>
          <Var name="result"/>
        </Return>
      </Begin>
    </Function>

    <Function name="delete" doc="Delete a record by id from table fw_capability">
      <Params>
        <Param name="id" type="int" required="true"/>
      </Params>
      <Return type="int" doc=""/>
      <Begin>
        <Return>
          <DataAccess method="delete">
            <Param name="_entity">fw_capability</Param>
