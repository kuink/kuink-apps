<?xml version='1.0'?>
<Method>
	<Doc>
  	<Description>Gets a list of countries (active or not) with the local country in the first place.</Description>
  </Doc>
	<Params>
		<Param name="is_active"/>
	</Params>
	<Body>
		<Sql>
			<XSql>
				<XSelect>
					<XField>
						<![CDATA[
							c.*
						]]>
					</XField>
				</XSelect>
				<XFrom>
					<XTable>
						<![CDATA[
							fw_country c
						]]>
					</XTable>
				</XFrom>
				<XWhere>
					<XCondition>
						<![CDATA[
							1 = 1
						]]>
					</XCondition>
					<XCondition optional="is_active">
						<![CDATA[
							AND c.is_active = {param->is_active}
						]]>
					</XCondition>
				</XWhere>
				<XOrderBy>
					<XOrder><![CDATA[ c.is_local DESC, c.name ASC ]]></XOrder>
				</XOrderBy>
			</XSql>
		</Sql>
	</Body>
</Method>