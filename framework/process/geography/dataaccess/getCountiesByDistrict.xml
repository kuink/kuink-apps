<?xml version='1.0'?>
<Method>
	<Doc>
  	<Description>Gets a list of counties (active or not) of the given district.</Description>
  </Doc>
	<Params>
		<Param name="code_district"/>
		<Param name="is_active"/>
	</Params>
	<Body>
		<Sql>
			<XSql>
				<XSelect>
					<XField>
						<![CDATA[
							c.*
						]]>
					</XField>
				</XSelect>
				<XFrom>
					<XTable>
						<![CDATA[
							fw_county c
							INNER JOIN fw_district d ON (d.code_district = c.code_district)
							INNER JOIN fw_country ct ON (ct.id = d.id_country)
						]]>
					</XTable>
				</XFrom>
				<XWhere>
					<XCondition>
						<![CDATA[
							c.code_district = {param->code_district}
						]]>
					</XCondition>
					<XCondition optional="is_active">
						<![CDATA[
							AND c.is_active = {param->is_active}
						]]>
					</XCondition>
				</XWhere>
				<XOrderBy>
					<XOrder><![CDATA[ c.name ASC ]]></XOrder>
				</XOrderBy>
			</XSql>
		</Sql>
	</Body>
</Method>