<?xml version="1.0" encoding="UTF-8"?>
<Node>
  <Permissions>
  </Permissions>
  <Doc lang="pt-PT">
  </Doc>
  <Libraries/>
  <Configuration>
  </Configuration>
  <Params>
      <Param name="code" doc="The class code"/>
  </Params>
  <Screens>
    <Screen id="scrAdd">
      <Form name="frmAdd" title="classWorkflow">
        <Select id="wf_id_process" datasource="call:framework,wf.process,api,getAll" label="workflowProcess" bindid="id" bindvalue="code"/>               
        <Select id="wf_type_code" datasource="call:framework,rm.class.workflow,api,getWorkflowTypes" label="workflowType" bindid="code" bindvalue="name"/>               
        <TextArea id="wf_params"/>
        <ButtonGroup>
          <Button id="cancel" type="cancel" label="cancel" action="back"/>
          <Button id="save" type="save" label="save" action="save"/>
        </ButtonGroup>
      </Form>
    </Screen>
  </Screens>

  <Actions>
    <Action name="init" screen="scrAdd">

    </Action>

    <Action name="save">
      <!-- Check to see if the json of wf_params is ok the following code will throw an exception if json is not well formed-->
      <JsonToSet><Var name="POSTDATA" key="wf_params"/></JsonToSet>        

      <Call library="framework,rm.class.workflow,api" function="addWorkflowConfiguration">
        <Param name="code"><Var name="PARAMS" key="code"/></Param>
        <Param name="wf_type_code"><Var name="POSTDATA" key="wf_type_code"/></Param>
        <Param name="wf_params"><Var name="POSTDATA" key="wf_params"/></Param>
        <Param name="wf_id_process"><Var name="POSTDATA" key="wf_id_process"/></Param>
      </Call>      
      <Action name="back"/>>
    </Action>

    <Action name="back">
      <RaiseEvent name="back"/>
    </Action>

  </Actions>
  <Library forceinterface="true">
  </Library>
</Node>
