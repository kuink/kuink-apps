<?xml version="1.0" encoding="UTF-8"?>
<Node>
  <Permissions>
  </Permissions>
  <Doc lang="pt-PT">
  </Doc>
  <Params>
    <Param name="idStateMachine" type="int"/>
  </Params>  
  <Libraries>
    <Use name="DateTimeLib" type="lib"/>
    <Use name="UtilsLib" type="lib"/>
  </Libraries>
  <Configuration/>
  <Screens>
    <Screen name="scrSearch" doc="Search Screen">
      <Form name="frmSearch" persist="true" title="search">
        <Select id="id_state_machine" datasource="call:framework,stateMachine,api,getAll" bindid="id" bindvalue="name"/>      
        <Text id="name"/>
        <ButtonGroup>
          <Button id="back" type="back" label="back" action="back"/>        
          <Button id="search" type="search" label="search" action="search"/>
          <Button id="insert" type="add" label="insert" action="insert"/>
        </ButtonGroup>
      </Form>
      <Grid name="grdSearchResult" pageable="true" collapsible="false" pagesize="10" pagingaction="search" title="result">
        <Template>
          <Columns>
            <Column name="id" label="id"/>
            <Column name="id_state_machine" label="id_state_machine" datasource="call:framework,stateMachine,api,getAll" bindid="id" bindvalue="name"/>            
            <Column name="code" label="code"/>
            <Column name="name" label="name"/>
            <Column name="name_public" label="name_public"/>
            <Column name="is_bulk" label="is_bulk"/>
            <Column name="is_start_state" label="is_start_state"/>
            <Column name="is_end_state" label="is_end_state"/>
            <Column name="is_active" label="is_active"/>
            <Column name="default_to_roles" label="default_to_roles"/>
            <Column name="visible_to_roles" label="visible_to_roles"/>
          </Columns>
          <Actions separator="true">
            <Action name="view" actionvalue="id"/>
            <Action name="edit" actionvalue="id"/>
            <Action name="delete" actionvalue="id" confirm="true"/>
          </Actions>
        </Template>
      </Grid>
    </Screen>
    <Screen name="scrView" doc="View Screen">
      <Form name="frmView">
        <Static id="id"/>
        <Static id="id_state_machine" datasource="call:framework,stateMachine,api,getAll" bindid="id" bindvalue="name"/>
        <Static id="code"/>
        <Static id="name"/>
        <Static id="description"/>
        <Static id="name_public"/>
        <Static id="description_public"/>
        <Static id="is_bulk"/>
        <Static id="is_start_state"/>
        <Static id="is_end_state"/>
        <Static id="is_active"/>
        <Static id="default_to_roles"/>
        <Static id="visible_to_roles"/>
        <ButtonGroup>
          <Button id="back" type="back" label="back" action="search"/>
          <Button id="edit" type="update" label="edit" action="edit"/>
          <Button id="delete" type="delete" label="delete" action="delete" confirm="true"/>
        </ButtonGroup>
      </Form>
    </Screen>
    <Screen name="scrEdit" doc="Edit Screen">
      <Form name="frmEdit">
        <Static id="id" label="id" required="true"/>
        <Static id="id_state_machine" datasource="call:framework,stateMachine,api,getAll" bindid="id" bindvalue="name"/>
        <Text id="code" label="code" required="true"/>
        <Text id="name" label="name" required="true"/>
        <Text id="description" label="description" required="true"/>
        <Text id="name_public" label="name_public" required="true"/>
        <Text id="description_public" label="description_public" required="true"/>
        <Checkbox id="is_bulk" label="is_bulk" required="true"/>
        <Checkbox id="is_start_state" label="is_start_state" required="true"/>
        <Checkbox id="is_end_state" label="is_end_state" required="true"/>
        <Checkbox id="is_active" label="is_active" required="true"/>
        <Text id="default_to_roles" label="default_to_roles" required="false"/>
        <Text id="visible_to_roles" label="visible_to_roles" required="false"/>
        <ButtonGroup>
          <Button id="cancel" type="cancel" label="cancel" action="search"/>
          <Button id="save" type="update" label="save" action="save"/>
        </ButtonGroup>
      </Form>
    </Screen>
  </Screens>
  <Actions>
    <Action name="init">
      <Action name="search"/>
    </Action>
    <Action name="search" screen="scrSearch">
      <Var name="defaultData"><Set/></Var>
      <Var name="defaultData" key="id_state_machine"><Var name="PARAMS" key="idStateMachine"/></Var>
      <If condition="$defaultData->__length &gt; 0">
        <Then>
          <Control method="setDefaultData" object="frmSearch">
            <Param>
              <Var name="defaultData"/>
            </Param>
          </Control>
        </Then>
      </If>
      <Var name="currentData">
        <Control method="getCurrentData" object="frmSearch"/>
      </Var>
      <Control method="bind" object="grdSearchResult">
        <Param>
          <Call library="framework,stateMachine.state,api" function="search">
            <Param name="id_state_machine">
              <Var name="currentData" key="id_state_machine"/>
            </Param>
            <Param name="name">
              <Var name="currentData" key="name"/>
            </Param>
            <Param name="pagesize">
              <Control method="getPageSize" object="grdSearchResult"/>
            </Param>
            <Param name="pagenum">
              <Control method="getCurrentPage" object="grdSearchResult"/>
            </Param>
          </Call>
        </Param>
      </Control>
    </Action>
    <Action name="view" screen="scrView">
      <Var name="selectedId" process="true">
        <ActionValue/>
      </Var>
      <Control method="bind" object="frmView">
        <Param>
          <Call library="framework,stateMachine.state,api" function="getById">
            <Param name="id">
              <ActionValue/>
            </Param>
          </Call>
        </Param>
      </Control>
    </Action>
    <Action name="save">
      <If condition="@selectedId == ''">
        <Then>
          <Var name="addParams"><Var name="POSTDATA"/></Var>
          <Var name="addParams" key="id_state_machine"><Var name="PARAMS" key="idStateMachine"/></Var>
          <Call library="framework,stateMachine.state,api" function="add" params="POSTDATA">
            <Param name="id_state_machine"><Var name="PARAMS" key="idStateMachine"/></Param>
          </Call>
        </Then>
        <Else>
          <Call library="framework,stateMachine.state,api" function="update" params="POSTDATA">
            <Param name="id"><Var name="selectedId" process="true"/></Param>
          </Call>
        </Else>
      </If>
      <Action name="search"/>
    </Action>
    <Action name="insert" screen="scrEdit">
      <Var name="selectedId" process="true">
        <Null/>
      </Var>
      <Var name="defaultData"><Set/></Var>
      <Var name="defaultData" key="id_state_machine"><Var name="PARAMS" key="idStateMachine"/></Var>
      <Control method="bind" object="frmEdit">
        <Param><Var name="defaultData"/></Param>
      </Control>

    </Action>
    <Action name="delete">
      <Var name="selectedId" process="true">
        <IsNull>
          <Param>
            <ActionValue/>
          </Param>
          <Param>
            <Var name="selectedId" process="true"/>
          </Param>
        </IsNull>
      </Var>
      <Call library="framework,stateMachine.state,api" function="delete">
        <Param name="id">
          <Var name="selectedId" process="true"/>
        </Param>
      </Call>
      <Action name="search"/>
    </Action>
    <Action name="edit" screen="scrEdit">
      <Var name="selectedId" process="true">
        <IsNull>
          <Param>
            <ActionValue/>
          </Param>
          <Param>
            <Var name="selectedId" process="true"/>
          </Param>
        </IsNull>
      </Var>
      <Control method="bind" object="frmEdit">
        <Param>
          <Call library="framework,stateMachine.state,api" function="getById">
            <Param name="id">
              <Var name="selectedId" process="true"/>
            </Param>
          </Call>
        </Param>
      </Control>
    </Action>
    <Action name="back">
      <RaiseEvent name="back"/>
    </Action>    
  </Actions>
  <Library forceinterface="true">
  </Library>
</Node>
