<?xml version="1.0" encoding="UTF-8"?>
<Node>
	<Permissions>
	</Permissions>
	<Doc lang="pt-PT">
	</Doc>
	<Libraries>
		<Use name="DateTimeLib" type="lib"/>
		<Use name="MathLib" type="lib"/>
		<Use name="StringLib" type="lib"/>
		<Use name="SetLib" type="lib"/>
	</Libraries>
	<Configuration />
	<Screens>
		<Screen id="mainScreen">
			<Form name="frmTask" persist="true">
			 <Header id="TaskDescription" name="TaskDescription" collapsible="true" collapsed="false"/>
			 <TextArea id="description" help="false"/>
			 <Header id="TaskConfiguration" name="TaskConfiguration" collapsible="true" collapsed="false"/>
			 <Text id="library" help="false"/>
			 <TextArea id="params" help="false"/>
			 <Int id="log_level" help="false"/>
			 <Header id="TaskScheduler" name="TaskScheduler" collapsible="true" collapsed="false" help="false"/>
			 <DateTime id="run_next" help="false"/>
			 <Select datasource="call:framework,generic,api,getYesNoDataSource" bindid="id" bindvalue="value" id="just_one_time" name="just_one_time" help="false"/>
			 <Date id="start_date" name="start_date" required="true" help="false"/>
			 <Date id="end_date" name="end_date" visible="true" help="false">
			 	<Rule attr="visible" condition="$just_one_time == '1'" value="false" runat="client"/>
			 </Date>
			 <Text id="start_time" required="true" help="false" />
			 <Text id="end_time" help="false">
			 	<Rule attr="visible" condition="$just_one_time == '1'" value="false" runat="client"/>
			 </Text>
			 <Int id="run_interval" help="false"/>
			 <Checkbox id="active"  help="false"/> 

			 <Checkbox id="dow_1" name="dow_1" help="false" label="monday"/>
			 <Checkbox id="dow_2" name="dow_2" help="false" label="tuesday"/>
			 <Checkbox id="dow_3" name="dow_3" help="false" label="wednesday"/>
			 <Checkbox id="dow_4" name="dow_4" help="false" label="thursday"/>
			 <Checkbox id="dow_5" name="dow_5" help="false" label="friday"/>
			 <Checkbox id="dow_6" name="dow_6" help="false" label="saturday"/>
			 <Checkbox id="dow_7" name="dow_7" help="false" label="sunday"/>

			 <ButtonGroup>
			   <Button type="back" id="back" name="back" label="back" action="back"/>
			   <Button type="save" id="save" label="save" action="save"/>
			   <Button type="refresh" id="refresh" name="refresh" action="init"/>
			 </ButtonGroup>
			</Form>
		</Screen>
	</Screens>
	<Actions>
		<Action name="init" screen="mainScreen">
			<Control method="setFieldProperty" object="frmTask">
				<Param>delete</Param>
				<Param>visible</Param>
				<Param>false</Param>
			</Control>
		</Action>

		<Action name="save">
			<Var name="insertParams" key="description"><Var name="POSTDATA" key="description"/></Var>
			<Var name="insertParams" key="library"><Var name="POSTDATA" key="library"/></Var>
			<Var name="insertParams" key="params"><Var name="POSTDATA" key="params"/></Var>
			<Var name="insertParams" key="run_interval"><Var name="POSTDATA" key="run_interval"/></Var>
			<Var name="insertParams" key="log_level"><Var name="POSTDATA" key="log_level"/></Var>
			<Var name="insertParams" key="active"><Var name="POSTDATA" key="active"/></Var>
			<Var name="insertParams" key="start_date"><Var name="POSTDATA" key="start_date"/></Var>
			<Var name="insertParams" key="end_date"><Var name="POSTDATA" key="end_date"/></Var>
			<Var name="insertParams" key="start_time"><Var name="POSTDATA" key="start_time"/></Var>
			<Var name="insertParams" key="end_time"><Var name="POSTDATA" key="end_time"/></Var>
			<Var name="insertParams" key="day_of_week">
				<Call library="this,this,taskManager" function="contructWeekDaysString">
					<Param name="arr"><Var name="POSTDATA"/></Param>
				</Call>
			</Var>

			<Call library="framework,scheduledTasks,api" function="add" params="insertParams" />
			<Action name="back"/>
		</Action>
		
		<Action name="back">
			<RaiseEvent name="back"/>
		</Action>
	</Actions>
</Node>
