<?xml version="1.0" encoding="UTF-8"?>
<Node>
	<Permissions>
	</Permissions>
	<Doc lang="pt-PT">
	</Doc>
	<Libraries>
		<Use name="DateTimeLib" type="lib"/>
		<Use name="MathLib" type="lib"/>
		<Use name="StringLib" type="lib"/>
		<Use name="SetLib" type="lib"/>
	</Libraries>
	<Params>
		<Param name="id" doc="Task id"/>
	</Params>
	<Configuration />
	<Screens>
		<Screen name="mainScreen">
			<Form name="frmTask" persist="true">
				<Hidden id="id" name="id"/>
			 <Header id="TaskDescription" name="TaskDescription" collapsible="true" collapsed="false"/>
			 <TextArea id="description" help="false"/>

			 <Header id="TaskConfiguration" name="TaskConfiguration" collapsible="true" collapsed="false"/>
			 <Text id="library" help="false"/>
			 <TextArea id="params" help="false"/>
			 <Int id="log_level" help="false"/>
			 <Checkbox id="active"  help="false"/>

			 <Header id="TaskScheduler" name="TaskScheduler" collapsible="true" collapsed="false" help="false"/>
			 <Select datasource="call:framework,generic,api,getYesNoDataSource" bindid="id" bindvalue="value" id="just_one_time" name="just_one_time" help="false"/>
			 <Date id="start_date" name="start_date" required="true" help="false"/>
			 <Date id="end_date" name="end_date" visible="true" help="false">
			 	<Rule attr="visible" condition="$just_one_time == '1'" value="false" runat="client"/>
			 </Date>
			 <Text id="start_time" required="true" help="false" />
			 <Text id="end_time" help="false">
			 	<Rule attr="visible" condition="$just_one_time == '1'" value="false" runat="client"/>
			 </Text>
			 <Int id="run_interval" help="false"/>

			 <Checkbox id="dow_1" help="false" label="monday"/>
			 <Checkbox id="dow_2" help="false" label="tuesday"/>
			 <Checkbox id="dow_3" help="false" label="wednesday"/>
			 <Checkbox id="dow_4" help="false" label="thursday"/>
			 <Checkbox id="dow_5" help="false" label="friday"/>
			 <Checkbox id="dow_6" help="false" label="saturday"/>
			 <Checkbox id="dow_7" help="false" label="sunday"/>

       <DateTime id="run_next" name="run_next" />
			 <ButtonGroup>
			   <Button type="back" id="back" name="back" label="back" action="back"/>
			   <Button type="save" id="save" label="save" action="save"/>
			   <Button type="refresh" id="refresh" name="refresh" action="init"/>
			 </ButtonGroup>
			</Form>
		</Screen>
	</Screens>
	<Actions>
		<Action name="init" screen="mainScreen">
			<Var name="task">
				<Call library="framework,scheduledTasks,api" function="get">
					<Param name="id"><Var name="PARAMS" key="id"/></Param>
				</Call>
			</Var>
			<Var name="_weekdays">
				<Call library="this,this,taskManager" function="explodeWeekDaysString">
					<Param name="str"><Var name="task" key="day_of_week"/></Param>
				</Call>
			</Var>


			<Control method="bind" object="frmTask">
				<Param><Var name="task"/></Param>
			</Control>
			<Control method="bind" object="frmTask">
				<Param><Var name="_weekdays"/></Param>
			</Control>

		</Action>

		<Action name="save">
			<Var name="updateParams" key="id"><Var name="POSTDATA" key="id"/></Var>
			<Var name="updateParams" key="description"><Var name="POSTDATA" key="description"/></Var>
			<Var name="updateParams" key="library"><Var name="POSTDATA" key="library"/></Var>
			<Var name="updateParams" key="params"><Var name="POSTDATA" key="params"/></Var>
			<Var name="updateParams" key="run_interval"><Var name="POSTDATA" key="run_interval"/></Var>
			<Var name="updateParams" key="log_level"><Var name="POSTDATA" key="log_level"/></Var>
			<Var name="updateParams" key="active"><Var name="POSTDATA" key="active"/></Var>
			<Var name="updateParams" key="start_date"><Var name="POSTDATA" key="start_date"/></Var>
			<Var name="updateParams" key="end_date"><Var name="POSTDATA" key="end_date"/></Var>
			<Var name="updateParams" key="start_time"><Var name="POSTDATA" key="start_time"/></Var>
			<Var name="updateParams" key="end_time"><Var name="POSTDATA" key="end_time"/></Var>
			<Var name="updateParams" key="day_of_week">
				<Call library="this,this,taskManager" function="contructWeekDaysString">
					<Param name="arr"><Var name="POSTDATA"/></Param>
				</Call>
			</Var>
      			<Var name="updateParams" key="run_next"><Var name="POSTDATA" key="run_next"/></Var>
			<Var name="POSTDATA" />
			<Var name="updateParams" />
			<Call library="framework,scheduledTasks,api" function="update" params="updateParams" />
			<Action name="back"/>
		</Action>

		<Action name="back">
			<RaiseEvent name="back"/>
		</Action>
	</Actions>
</Node>
